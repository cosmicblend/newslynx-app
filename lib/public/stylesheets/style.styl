// 	height 100%


/* end approval river */

/* T E X T  S T Y L E S  */
.division-title,.division-description
	padding 10px
.division-title
	font-size 2.75em
.division-description
	font-size 1.2em
label
	user-select none
	// font-size 1.2em
input
	margin-bottom 5px
.pub-date
	text-transform uppercase
	margin-bottom 3px
/* end text styles */

/*  M A I N  A R T I C L E  */
#content
	padding 0

#content[data-mode="detail"]
	padding 25px 50px

#content[data-mode="compare"]
	padding 25px

.article-detail-container
	.toolbar
		overflow auto
		margin 20px 0 40px 0
		padding-bottom 10px
		border-bottom 1px solid #ccc
	.pub-date
		font-size 1.2em
	.headline,.title
		position relative
	.headline
		font-size 2.8em
	.title
		font-size 2.2em
	.headline:before,.title:before
		position absolute
		color #DDD
		font-weight 400
		top 1px
	.headline:before
		left -24px
		content '# '
	.title:before
		left -32px
		content '## '
	.description
		font-size 1.3em
	.group-container
		display inline-block
		vertical-align bottom
		height 100%
		width 50%
		.group-title
			font-size 1.3em
			font-weight 200
			margin-bottom 5px
		ul.tabs
			.tab
				font-size 1.3em
				display inline-block
				padding 5px 8px
				margin-right 5px
				font-weight 200
				letter-spacing 1px
				user-select none
			.tab.active
				background articles
				color #fff
			.tab:hover
				cursor pointer
				text-decoration underline
			.tab.active:hover
				cursor default
				text-decoration none
	.group-container[data-side="right"]
		.group-item
			float right
			display block
			margin-left 50%
	.tag-container
		margin 5px 0
	.tag-title
		display inline
		font-size 1.2em
	ul.tags
		display inline
		.tag
			display inline
			padding 3px 5px
			background-color #fc0
			margin-left 5px
			user-select none
			border-radius 2px
			font-size 1.1em
			position relative
		.tag:hover
			cursor pointer
		.tag:hover:after
			position absolute
			left 0
			top 0
			text-align center
			width 100%
			height 100%
			content 'Remove'
			letter-spacing 1px
			color #000
			line-height 1.5em
			border-radius 2px
			background-color #fff
			border 1px solid #ccc
			box-sizing border-box
	.edit-tags
		display inline
		margin-left 10px
	#ST-chart
		max-width 960px
		height 500px
		margin-bottom 50px

