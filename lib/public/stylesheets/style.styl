@import 'nib'

link_blue = #0092ce
link_blue_hover = #0082b6

*
	box-sizing border-box
html
	font-size 16px
body
	font 62.5% "Helvetica Neue","Lucida Grande", Helvetica, Arial, sans-serif
	margin 0
html,body
	height 100%
a
	color link_blue
	text-decoration none
a:hover
	color link_blue_hover
	text-decoration underline
ul
	list-style none
	margin 0
	padding 0

h1,h2,h3,h4,ul
	margin 0
	padding 0
	-webkit-margin-before 0px
	-webkit-margin-after 0px
	-webkit-margin-start 0px
	-webkit-margin-end 0px
	-webkit-padding-start 0

p
	margin 0

.division-description
	p 
		margin-bottom 10px

input[type="search"]
	appearance searchfield

button,input.destroy
	color #333
	background-color #EEE
	background-image linear-gradient(#FCFCFC, #EEE)
	border 1px solid #D5D5D5

button,input[type="submit"],input.destroy
	padding 5px 8px
	font-weight bold
	text-shadow 0px 1px 0px rgba(255, 255, 255, 0.9)
	white-space nowrap
	border-radius 3px
	
button,input[type="submit"],input.destroy,select
	margin 0
	position relative
	display inline-block
	font-size 13px
	vertical-align top
	cursor pointer
	background-repeat repeat-x
	-moz-user-select none

select
	font-size 12px !important

button.mini
	padding 0 6px
	font-size 12px

select
	padding 1px 8px !important
	text-shadow none

textarea
	font-family "Helvetica Neue","Lucida Grande", Helvetica, Arial, sans-serif
	font-size 12px
	padding 3px
	box-shadow 1px 2px 1px 0px #ededed inset
	min-height 50px
	margin 10px
	overflow auto
	width 300px    
	border 1px solid #aaa

input[type="submit"]
	color #FFF
	text-shadow 0px -1px 0px rgba(0, 0, 0, 0.25)
	background-color #60B044
	background-image linear-gradient(#8ADD6D, #60B044)
	background-repeat repeat-x
	border 1px solid #5CA941

input.destroy
	color #900

button:hover,input[type="submit"]:hover,input.destroy:hover
	cursor pointer

button:hover
	text-decoration none
	background-color #DDD
	background-image linear-gradient(#EEE, #DDD)
	background-repeat repeat-x
	border-color #CCC

input.destroy:hover
	color #900
	color #FFF
	text-shadow 0px -1px 0px rgba(0, 0, 0, 0.3)
	background-color #B33630
	background-image linear-gradient(#DC5F59, #B33630)
	background-repeat repeat-x
	border-color #CD504A

input[type="submit"]:hover
	color #FFF
	background-color #569E3D
	background-image linear-gradient(#79D858, #569E3D)
	background-repeat repeat-x
	border-color #4A993E

button:active
	background-color #dcdcdc
	background-image none
	border-color #b5b5b5
	box-shadow inset 0 2px 4px rgba(0,0,0,0.15)

input[type="submit"]:active
	background-color #569e3d
	background-image none
	border-color #418737

input.destroy:active
	color #fff
	background-color #b33630
	background-image none
	border-color #9f312c

.disabled button
	opacity .4
	pointer-events none

.disabled:hover button,.disabled:hover button:hover,.disabled:hover
	cursor default !important


input[type="password"],input[type="text"]
	margin-left 0
/* M O D E S */
body[data-modal=true]
	overflow hidden
	#recipes.drawer-list-item-ul
		overflow-y hidden !important

