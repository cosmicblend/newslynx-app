single_width = 8%
multi_width = 13%
wide_width = 11%
bars_width = 8%

single_margin = 20px
date_margin = single_margin/2
bullet_margin = 10px
group_margin = 30px

#compare-grid
	width 100%
.cell
	display inline-block
	vertical-align top
.cell.gfx
	vertical-align bottom
	position relative
	top -3px
		
.cell
	width single_width
	margin-right single_margin
.cell.multi
	width (multi_width/2)
	margin-right bullet_margin
.cell.date
	margin-right date_margin
.cell.wide
	width wide_width
.cell.bar
	width bars_width
.header-meta
	margin-right group_margin
	// background-color #fc0
.header-dimensions-container .cell.multi:nth-child(even),
.article-detail-row-container .cell.multi:nth-child(odd)
	margin-right group_margin
/* Header styles */
.header-meta-container,.header-dimensions-container
	width 100%
.header-dimensions-container
	font-weight bold
	margin-bottom 3px
	border-bottom 1px solid #ccc
.header-meta
	width unquote('calc('+multi_width+' + '+bullet_margin+')')
	text-align center
	font-size 1.1em
.header-meta.bars
	width unquote('calc('+bars_width*2+' + '+bullet_margin+')')
.header-meta:first-child
	margin-left unquote('calc('+(single_width + unit(wide_width,""))+' + '+(single_margin + date_margin)+')')
.header-el
	font-size 1.1em
	user-select none
	position relative
.header-el:hover
	cursor pointer
	text-decoration underline
.header-el.active
	color the_green
	white-space no-wrap
.header-el .name
	display inline-block
.header-el.active:after
	display inline-block
	text-decoration none
	margin-left 3px
	font-size .8em
.header-el.active:hover:after
	text-decoration none
.header-el.active[data-sort-ascending="true"]:after
	content '▲'
	position relative
	top -2px
.header-el.active[data-sort-ascending="false"]:after
	content '▲'
	transform rotate(180deg)
/* end header styles */


.cell.title
	white-space no-wrap
	overflow-x hidden
	font-size 1.2em
.cell.date
	font-size 1.2em
.bullet-container
	background-color #eee
.bullet
	background-color select_blue
	height 10px
.marker
	position absolute
	top -2px
	height 14px
	background-color #6f6f6f // TODO, maybe make this a standard gry or make a standard gray this
	width 2px

.bar-column
	display inline-block
	width 13px
	margin-right 1px
	text-align center
	vertical-align bottom
.bar-container[data-group="subject"]
	.bar
		height 10px
	
.bar
	width 100%
	margin-top 1px
	height 2px
