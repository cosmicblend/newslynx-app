/*   A R T I C L E  S T Y L E S   */
.division-switcher
	font-size 1.8em
	display table
	background-color bg_gray
	li
		display table-cell
		width 50%
		text-align center
		vertical-align middle
		padding 5px
		height division_switcher_height
		color #fff
		user-select none
	li:not(.active):hover
		cursor pointer
		background-color tint(highlight_gray, 30%)
	.active:hover
		cursor default

.drawer-list-item,.drawer-options,.drawer-section-title,.drawer-pointer
	user-select none
	.btn
		padding 5px 0
	.pub-date
		font-size 1.1em
	.title
		font-size 1.4em
		margin-bottom 2px
	.count
		text-transform uppercase
		margin-bottom 2px
	.description
		font-size 1.2em
		color bg_gray
	.toolbar
		position relative
		font-size 1.2em
		margin-top 11px
	.settings-switch,.enable-switch
		display inline-block
	.enable-switch
		bottom 0
		position absolute
		right 0
	.enable-switch[data-enabled="true"]
		color enable_green
	.enable-switch[data-enabled="false"]
		color disabled_red
	.settings-switch:not(.active):hover .text,.enable-switch:hover
		text-decoration underline
		cursor pointer
	.settings-switch:active
		color #666
	.modal-switch.active:hover
		cursor default
	// .enable-switch[data-enabled="true"]:active
	// 	color shade(enable_green, 80%)
	// .enable-switch[data-enabled="false"]:active
	// 	color shade(disabled_red, 80%)
.drawer-list-outer:not(.active):hover
	cursor pointer
	background-color tint(select_blue, 45%)
.drawer-list-outer.active
	background-color select_blue
.drawer-list-outer.active:hover
	cursor default
#drawer[data-mode="compare"] .drawer-list-outer.active:hover,
#drawer[data-mode="my-recipes"] .drawer-list-outer.active:hover
	background-color darken(select_blue, 7%)
	cursor pointer

#drawer[data-mode="compare"],
#drawer[data-mode="detail"],
#drawer[data-mode="my-recipes"]
	.inputs-container,.drawer-list-inner
		display inline-block
		vertical-align top
	.inputs-container
		margin-right 10px
	.drawer-list-inner
		width 85%

.drawer-list-item-ul
	height "calc(100vh - %s)" % (division_switcher_height + drawer_pointer_padding*2 + 1) // Plus one because apparently this is like one pixel off	
	overflow-x hidden
	overflow-y scroll
.drawer-container[data-mode="my-recipes"]
	.drawer-list-item-ul
		height "calc(100vh - %s)" % (division_switcher_height + drawer_pointer_padding*1.5 + drawer_item_single_line ) // Plus one because apparently this is like one pixel off	
/* end drawer item */

/* H O M E */
body[data-section="home"] #content
	padding 15px

/* end home */

/*  A P P R O V A L  R I V E R   */
#content[data-mode="create-new"]
	padding 25px 30px
	.article-detail-wrapper
		margin 10px 0 55px 0
		padding 10px 10px 10px 50px
		max-width 600px
#content[data-mode="my-recipes"]
	padding 5px 20px
	.article-detail-wrapper
		margin 10px
		padding 10px
		width 375px

.drawer-pointer
	padding 20px 10px 8px 10px
	font-size 1.3em
	font-weight bold
	color #303030
	p
		font-weight normal
		padding-bottom 8px
		span
			font-weight bold
	.drawer-item
		padding 5px
		.add-to-comparison
			border-radius 2px
			padding 7px 7px 7px 17px
			color #53A373
			font-weight 400
			background-color tint(articles, 72%)
			box-shadow 1px 1px 2px -1px rgba(26, 92, 3, .5)
			text-shadow 1px 1px 3px rgba(234, 250, 231, 1.0)
	.drawer-item:hover
		cursor pointer
	.drawer-item:hover .add-to-comparison
		background-color tint(articles, 60%)
		color #3D915F
	.add-to-comparison:active
		background-color tint(articles, 45%) !important
		text-shadow 1px 1px 3px rgba(234, 250, 231, .5)


.drawer-pointer.center
	text-align center
#recipe-sources
	padding 0
.view-all:hover
	cursor default
#drawer[data-mode="my-recipes"] .view-all.active.drawer-list-outer:hover
	background-color select_blue
	cursor default
.approval-child[data-which="btns"]
	margin-right 1%
.approval-child[data-which="info"]
	width 85%
.approval-btn-container
	text-align center
	width 50%
	display inline-table
	color #4e4e4e
.approval-btn-container[data-which="yes"]
	background-color #A2F4BF
	// color enable_green
.approval-btn-container[data-which="no"]
	background-color #FFB0B0
	// color disabled_red
.approval-btn
	font-size 1.8em
	width 100%
	user-select none
	border 2px solid transparent
	display table-cell
	vertical-align middle
.approval-btn-container .approval-btn:hover
	cursor pointer
.approval-btn-container .approval-btn:active
	color #fff
.approval-btn-container[data-which="yes"] .approval-btn:hover
	border-color enable_green
.approval-btn-container[data-which="no"] .approval-btn:hover
	border-color disabled_red
.approval-btn-container[data-which="yes"] .approval-btn:active
	background-color enable_green
.approval-btn-container[data-which="no"] .approval-btn:active
	background-color disabled_red

.approval-child
	.title
		font-size 1.7em
		margin-bottom 3px
	.description
		font-size 1.2em

.show-hide-default-event
	font-size 1.4em
	margin 5px 0 15px 0
	user-select none
	line-height 1.4em
	.toggle-default-event[data-status="true"]
		color enable_green
	.toggle-default-event[data-status="false"]
		color disabled_red
	.toggle-default-event:hover
		text-decoration underline
		cursor pointer

.default-event-container
	display none
