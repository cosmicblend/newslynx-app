mixin about
	li.section.active(data-section="about")
		span.nav-link About
			
mixin approval-river
	li.section.active(data-section="approval-river")
		span.nav-link Approval river

			
mixin articles
	li.section.active(data-section="articles")
		span.nav-link Articles
	li.section-options(data-section-options="articles")
		.section-title Select articles by...
		.option-container(data-type="search")
			.option-title Keywords
			input(type="search" name="article-title-searcher" results="5" placeholder="Search headlines..." incremental)#article-title-searcher
		.option-container(data-type="date-range")#date-range-searcher
			.option-title Date range 
				.clear-date-range — 
					span Clear
			input(type="text" placeholder="From..." data-dir="from")
			input(type="text" placeholder="To..." data-dir="to")
		.option-container(data-type="sort")#article-drawer-sorter
			.option-title Sort by
			select
				option(value="timestamp_desc") Publish date
				option(value="twitter_mentions_desc") Twitter mentions
				option(value="facebook_likes_desc") Facebook likes
				option(value="pageviews_desc") Pageviews
				option(value="avg_time_on_page_desc") Avg. time on page
				option(value="per_internal_desc") Internal referrers
				option(value="per_external_desc") External referrers
				option(value="subject_tags_desc") Subject tags
				option(value="impact_tags_desc") Impact tags
		.option-container(data-type="subject-tags")
			.option-title Subject tags — 
				span.show-hide(data-open="false") Show
			ul.tag-list
				li.placeholder
					| None yet! <br/>
					| Create them in   
					a.out-link(href="/settings") settings
					| .
		.option-container(data-type="impact-tags")
			.option-title Impact tags — 
				span.show-hide(data-open="false") Show
			ul.tag-list
				li.placeholder
					| None yet! <br/>
					| Create them in   
					a.out-link(href="/settings") settings
					| .
		.option-container(data-type="impact-tag-categories")
			.option-title Impact categories — 
				span.show-hide(data-open="false") Show
			ul.tag-list
				li.placeholder
					| None yet! <br/>
					| Create impact tags in   
					a.out-link(href="/settings") settings
					| .
		.option-container(data-type="impact-tag-levels")
			.option-title Impact levels — 
				span.show-hide(data-open="false") Show
			ul.tag-list
				li.placeholder
					| None yet! <br/>
					| Create impact tags in   
					a.out-link(href="/settings") settings
					| .

