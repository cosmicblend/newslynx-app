btn_width = 50
.ST-note-btns
	width (btn_width)px
	
#ST-chart button
	background transparent
	border none
	float right
	cursor pointer
	width (btn_width)px
	padding 0
	margin 5px 0 0 0
	border 1px solid #ccc
	text-shadow: 0 2px 1px rgba(0,0,0,.3)
	border-radius: .5em;
	box-shadow: 0 2px 2px rgba(0,0,0,.15)
	background-color #f8f8f8

#ST-chart button:hover
	box-shadow: 0 2px 2px rgba(0,0,0,.25)

#ST-chart button:active
	background-color #ededed
