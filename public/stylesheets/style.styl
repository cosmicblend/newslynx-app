.rail-sections
	margin-top 25px
.rail-section
	margin-bottom 25px
	position relative
	left -1px
.rail-section-title
	font-size 1.4em
	display inline-block
	padding 7px 26px 7px 7px
	margin-bottom 3px
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
.rail-section-title:hover
	text-decoration underline
	cursor pointer
.rail-section-title.active
	background-color #fff
	// box-shadow 4px 0px 5px -1px #D6D6D6
	color the_green
.rail-section-title.active:hover
	cursor default
	text-decoration none
.rail-preview-items
	padding-left 8px


/* C O N T E N T	S E C T I O N S */
.content-switcher
	width 100%

.content-section
	display none
	width 100%

/* dashboard */
.timeline-wrapper
	width 100%

.timeline-graph
	width 100%
	height 200px
	margin-bottom 25px


/* E V E N T	R I V E R */
.tag-filters
	margin-bottom 20px
.tag-filters .pointer
	font-size 1em
	margin-bottom 2px
	text-transform uppercase
.tag
	display inline-block
	font-size: 1.1em
	padding 2px 4px
	color #ccc
	margin-right 5px
	border-radius 3px
	background-color #666
	border 1px solid #616161
.tag-filter
	user-select none
	opacity .4
.tag-filter.selected
	opacity 1
.tag-filter:hover
	cursor pointer
	text-decoration underline

.event-item-wrapper
	border-left 3px solid #c3412c
	padding 5px
	margin-bottom 10px
	// box-shadow 0 0 4px #ccc
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;


.event-item-title
	font-size 1.5em
	margin-bottom 10px

.event-item-desc
	font-size 1.2em
	margin-bottom 10px

.event-item-tag.tag
	font-size 1em
	padding: 1px 3px

/* F L A G S	*/
.shown
	display block

/* user styles */
social_color = #66c2a5
major_impact_color = #fc8d62
citation_color = #8da0cb
darken_border = 30%
darken_color = 80%

.tag[data-tag*="social"]
	background-color social_color
	border-color darken(social_color, darken_border)
	color darken(social_color, darken_color)
.ST-note[data-note-type*="social"] line
	stroke social_color

.tag[data-tag*="major-event"]
	background-color major_impact_color
	border-color darken(major_impact_color, darken_border)
	color darken(social_color, darken_color)
.ST-note[data-note-type*="major-event"] line
	stroke major_impact_color

.tag[data-tag*="citation"]
	background-color citation_color
	border-color darken(citation_color, darken_border)
	color darken(social_color, darken_color)
.ST-note[data-note-type*="citation"] line
	stroke citation_color

