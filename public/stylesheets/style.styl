@import 'nib'

*
	box-sizing border-box
html
	font-size 16px
ul
	list-style none
	margin 0
	padding 0
body
	font 62.5% "Helvetica Neue","Lucida Grande", Helvetica, Arial, sans-serif
	margin 0
a
	color #00B7FF

page_width = 960
header_height = 35
the_beige = #f3f0df
the_green = #0eb521

/* H E A D E R	*/
#header-container
	position absolute
	top 0
	right 0
	left 0
	height (header_height)px
	border-bottom 1px solid #bbb
	background-color #fffdf1
	background-image linear-gradient(#FFFDF1, #f2eac7)

#header-container img
	vertical-align middle
	height 100%

#header-container .page-title
	font-size 2em
	font-weight bold
	vertical-align middle

#header-items
	position relative
	max-width (page_width)px
	width 100%
	height 100%
	margin 0 auto

/* M A I N	E L E M E N T S */
#main-wrapper
	margin-top (header_height)px
	margin-left auto
	margin-right auto
	max-width (page_width)px

#breadcrumbs
	padding-top (header_height/1.5)px
	font-size 1.8em
#breadcrumbs li
	display inline
#breadcrumbs li span
	margin 0 5px
#breadcrumbs li.current
	font-weight bold

.right-rail
	width 33.33%
	height auto
	min-height 100px
	float right

.main-content
	width 66.66%
	height auto
	display inline-block
	border-right 1px solid #e5e5e5
	background-color #fff
	padding-right 30px
	box-shadow 13px 0px 14px -16px #CCC

h1.headline
	font-size 2.4em
	margin 0 0 10px 0
	margin-top (header_height/1.5)px // weird hack for stylus, which is putting a space before `px` if margin-top decared in shorthand with a variable

h2.deck
	font-weight normal
	font-size 1.3em

.section-hed
	font-size 2.3em
	margin-bottom 5px

/* R I G H T	R A I L */
.admin-container
	font-size 1.4em
	text-align center
	height 100%
	top 12%
	position absolute
	right 15px
.admin-item
	display inline-block
	margin 5px
.admin-item:hover
	text-decoration underline
	cursor pointer

.rail-sections
	margin-top 25px
.rail-section
	margin-bottom 25px
	position relative
	left -1px
.rail-section-title
	font-size 1.4em
	display inline-block
	padding 7px 26px 7px 7px
	margin-bottom 3px
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
.rail-section-title:hover
	text-decoration underline
	cursor pointer
.rail-section-title.active
	background-color #fff
	box-shadow 4px 0px 5px -1px #D6D6D6
	color the_green
.rail-section-title.active:hover
	cursor default
	text-decoration none
.rail-preview-items
	padding-left 8px


/* C O N T E N T	S E C T I O N S */
.content-switcher
	width 100%

.content-section
	display none
	width 100%

/* dashboard */
.timeline-wrapper
	width 100%

.timeline-graph
	width 100%
	height 200px
	margin-bottom 25px


/* E V E N T	R I V E R */
.tag-filters
	margin-bottom 20px
.tag-filters .pointer
	font-size 1em
	margin-bottom 2px
	text-transform uppercase
.tag
	display inline-block
	font-size: 1.1em
	padding 2px 4px
	color #ccc
	margin-right 5px
	border-radius 3px
	background-color #666
	border 1px solid #616161
.tag-filter
	user-select none
	opacity .4
.tag-filter.selected
	opacity 1
.tag-filter:hover
	cursor pointer
	text-decoration underline

.event-item-wrapper
	border-left 3px solid #c3412c
	padding 5px
	margin-bottom 10px
	box-shadow 0 0 4px #ccc
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;


.event-item-title
	font-size 1.5em
	margin-bottom 10px

.event-item-desc
	font-size 1.2em
	margin-bottom 10px

.event-item-tag.tag
	font-size 1em
	padding: 1px 3px

/* F L A G S	*/
.shown
	display block

/* user styles */
social_color = #66c2a5
major_impact_color = #fc8d62
citation_color = #8da0cb
darken_border = 30%
darken_color = 80%

.tag[data-tag*="social"]
	background-color social_color
	border-color darken(social_color, darken_border)
	color darken(social_color, darken_color)
.ST-note[data-note-type*="social"] line
	stroke social_color

.tag[data-tag*="major-event"]
	background-color major_impact_color
	border-color darken(major_impact_color, darken_border)
	color darken(social_color, darken_color)
.ST-note[data-note-type*="major-event"] line
	stroke major_impact_color

.tag[data-tag*="citation"]
	background-color citation_color
	border-color darken(citation_color, darken_border)
	color darken(social_color, darken_color)
.ST-note[data-note-type*="citation"] line
	stroke citation_color

